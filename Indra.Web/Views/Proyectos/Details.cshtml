@section Scripts {
    @Scripts.Render("~/plugins/flot")
    @Scripts.Render("~/plugins/footable")

    <script type="text/javascript">
        $(document).ready(function() {

            $('.footable').footable();

            //% TAREAS COMPLETADAS
            var pieOptions = {
                series: {
                    pie: {
                        show: true,
                        label: {
                            show: true,
                            radius: 3 / 4,
                            formatter: labelFormatter,
                            background: {
                                opacity: 0.7
                            }
                        }
                    }
                },
                grid: {
                    hoverable: true
                },
                tooltip: true,
                tooltipOpts: {
                    content: "%p.0%, %s",
                    shifts: {
                        x: 20,
                        y: 0
                    },
                    defaultTheme: false
                }
            };

            var pieData = JSON.parse('@Html.Raw(Json.Encode(Model.TareasCompletadasData))');

            function labelFormatter(label, series) {
                return "<div style='font-size:8pt; text-align:center; padding:2px; color:white;'>" +
                    label +
                    "<br/>" +
                    Math.round(series.percent) +
                    "%</div>";
            }

            $.plot($("#flot-pie-chart"), pieData, pieOptions);

            //PRESUPUESTO
            var barData = JSON.parse('@Html.Raw(Json.Encode(Model.PresupuestoUtilizadoData))');

            var ticks = [];

            barData.forEach(function (item, index) {
                ticks.push([item.data.Value, item.label + ' (' + item.data.Key.toFixed(2) + ')']);
                item.data = [[item.data.Key, item.data.Value]];
            });

            var barOptions = {
                series: {
                    bars: {
                        show: true,
                        align: "center",
                        horizontal: true,
                        barWidth: 0.6,
                        fill: true,
                        fillColor: {
                            colors: [
                                {
                                    opacity: 0.8
                                }, {
                                    opacity: 0.8
                                }
                            ]
                        }
                    }
                },
                xaxis: {
                    axisLabel: "Monto (S/)",
                    tickDecimals: 2
                },

                yaxis: {
                    ticks: ticks,
                    tickDecimals: 2
                },
                colors: ["#1ab394"],
                grid: {
                    color: "#999999",
                    hoverable: true,
                    clickable: true,
                    tickColor: "#D4D4D4",
                    borderWidth: 0
                },
                legend: {
                    show: true
                },
                tooltip: true,
                tooltipOpts: {
                    content: "Monto: %x"
                }
            };

            $.plot($("#flot-bar-chart"), barData, barOptions);

            //TAREAS
            var barData1 = JSON.parse('@Html.Raw(Json.Encode(Model.TareasXResponsableData))');

            var ticks1 = [];

            barData1.forEach(function (item, index) {
                ticks1.push([item.data.Key, item.label + ' (' + item.data.Value.toFixed(2) + '%)']);
                item.data = [[item.data.Key, item.data.Value]];
            });

            var barOptions1 = {
                series: {
                    bars: {
                        show: true,
                        align: "center",
                        barWidth: 0.3,
                        fill: true,
                        fillColor: {
                            colors: [
                                {
                                    opacity: 0.8
                                }, {
                                    opacity: 0.8
                                }
                            ]
                        }
                    }
                },
                xaxis: {
                    axisLabel: "Responsables",
                    ticks: ticks1
                },

                yaxis: {
                    tickDecimals: 2
                },
                colors: ["#1ab394"],
                grid: {
                    color: "#999999",
                    hoverable: true,
                    clickable: true,
                    tickColor: "#D4D4D4",
                    borderWidth: 0
                },
                legend: {
                    show: false
                },
                tooltip: true,
                tooltipOpts: {
                    content: "%: %y"
                }
            };

            $.plot($("#flot-bar-chart1"), barData1, barOptions1);

            //AVANCE
            function gd(year, month, day) {
                return new Date(year, month, day).getTime();
            }

            var lineData1 = JSON.parse('@Html.Raw(Json.Encode(Model.AvanceTareasPlanificadoData))');

            var lineData2 = JSON.parse('@Html.Raw(Json.Encode(Model.AvanceTareasActualData))');

            lineData1.forEach(function (item, index) {
                item.data = [item.data.Key, item.data.Value];
            });

            lineData2.forEach(function (item, index) {
                item.data = [[item.data.Key, item.data.Value]];
            });

            var lineOptions = {
                series: {
                    lines: {
                        show: true,
                        lineWidth: 2,
                        fill: true,
                        fillColor: {
                            colors: [{
                                opacity: 0.0
                            }, {
                                opacity: 0.0
                            }]
                        }
                    }
                },
                xaxis: {
                    tickDecimals: 2
                },
                colors: ["#1ab394"],
                grid: {
                    color: "#999999",
                    hoverable: true,
                    clickable: true,
                    tickColor: "#D4D4D4",
                    borderWidth: 0
                },
                legend: {
                    show: false
                },
                tooltip: true,
                tooltipOpts: {
                    content: "x: %x, y: %y"
                }
            };
            var lineData3 = [{
                label: "bar",
                data: [
                    [1, 34],
                    [2, 25],
                    [3, 19],
                    [4, 34],
                    [5, 32],
                    [6, 44]
                ]
